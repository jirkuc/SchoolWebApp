@model IEnumerable<AppUser>
@{
    ViewData["Title"] = "Users";
}
<h1>List of @ViewData["Title"]</h1>
<a asp-action="Create" class="btn btn-secondary my-2">Create User</a>
<table class="table table-sm table-bordered rounded-dark">
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Update</th>
        <th>Delete</th>
        <th>ID</th>
    </tr>
    @foreach (AppUser user in Model) {
        <tr>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>
                @if (user.NormalizedUserName != "ADMIN") {
                    <a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@user.Id"> Update</a>
                }
            </td>
            <td>
                @if (user.NormalizedUserName != "ADMIN") {
                    <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </form>
                }
            </td>
            <td>
                @if (user.NormalizedUserName != "ADMIN") {
                    @user.Id
                }
            </td>
        </tr>
    }
</table>