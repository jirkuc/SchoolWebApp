@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Roles";
}
<h1>List of @ViewData["Title"]</h1>
<a asp-action="Create" class="btn btn-secondary my-2">Create Role</a>
<table class="table table-sm table-bordered">
    <tr>
        <th>Name</th>
        <th>Update</th>
        <th>Delete</th>
        <th>ID</th>
    </tr>
    @foreach (var role in Model) {
        <tr>
            <td>@role.Name</td>
            <td>
                @if (role.Name != "Admin") {
                    <a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@role.Id">Update</a>
                }
            </td>
            <td>
                @if (role.Name != "Admin") {
                    <form asp-action="Delete" asp-route-id="@role.Id"
                          method="post">
                        <button type="submit" class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </form>
                }
            </td>
            <td>
                @if (role.Name != "Admin") {
                    @role.Id
                }
            </td>
        </tr>
    }
</table>